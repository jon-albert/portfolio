doctype html
html.no-js(lang='en')
  head
    meta(http-equiv='content-type', content='text/html; charset=UTF-8')
    title Jonathan Albert - Product Designer
      
    include ../_includes/_head
    //- link(rel='stylesheet', href='./css/style-light.css')

  body#menu.body-page
    // Page Loader
    include ../_includes/_preloader
    // Start Header
    include ../_includes/_header
    // Start Cover
    include ../_includes/_cover 
     
    // Start Content
    main#itempage.page-main.page-fullpage.main-anim
      .section.section-twoside.fp-auto-height-responsive.section-item.padding-none(data-section='item-alpha')
        .section-cover-tier.mask-black
        .section-wrapper.largewidth
          .item.row
            .col-12.col-md-12.center-vh
              .section-content.anim
                article.article.article-light
                  .article-content
                    .wrapper
                      h2.highlight Portfolio 2017
                      .info-small
                        p
                          i.icon.fa.fa-building
                          |  Personal
                        p
                          i.icon.fa.fa-paint-brush
                          | Development &amp; Design
                      .item.row.justify-content-between.mt-5
                        .col-12.col-md-12.col-lg-12
                          h4.project-sub-title About this project
                          p
                            | Previous version of my personal portfolio, created a brand and layout for all 
                            | design. This previous version was archived when I decided to create a simpler design that is currently used.

                          .section-content.anim
                            
                            .images.text-center
                              .img-frame-normal.frame-small.portrait
                                img.img(src='./img/portfolio-2017.png', alt='Portfolio - 2017')
                                  
                .btns-action.row.item-buttons
                  .col-md-12.item-buttons-next
                    a.btn.btn-outline-white.border-0(href='bell-security.html')
                      i.icon.fa.fa-arrow-circle-left.mr-2
                      span.txt Prev
                    a.btn.btn-outline-white.border-0(href='nhl-showcase.html')
                      span.txt Next
                      i.icon.fa.fa-arrow-circle-right.ml-2
    // End Content
    // Scripts
    include ../_includes/_scripts
